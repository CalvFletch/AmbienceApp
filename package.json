{
  "name": "ambience-app",
  "version": "1.0.4",
  "description": "Ambient music player with auto-ducking",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "skyrim",
    "ambience",
    "music",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.isaac.ambienceapp",
    "productName": "Ambience",
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsh"
    },
    "compression": "store",
    "files": [
      "**/*",
      "!backup/**",
      "!*.cs",
      "!*.zip",
      "!*.7z",
      "!*.ai",
      "!dist/**"
    ],
    "extraResources": []
  }
}
